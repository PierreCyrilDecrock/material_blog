{% extends 'BlogBundle::layout.html.twig' %}

{% block body %}
    <h4>{{ article.title}}</h4>
    <i>{{ article.summary }}</i>
    <p>{{ article.content }}</p>
    <p>Auteur : {{ article.author.username }}</p>
    <p>Cat√©gorie : {{ article.category.name }}</p>
    {% for tag in article.tags %}
    <div class="chip">
        {{ tag.name }}
    </div>
    {% endfor %}

    
    {% for comment in article.comments %}
        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{ comment.author }}</span>
                        <p>{{ comment.content }}</p>
                    </div>
                    <div class="card-action">
                        <p>{{ comment.publishedAt|date("m/d/Y")}}</p>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}
{% endblock %}
