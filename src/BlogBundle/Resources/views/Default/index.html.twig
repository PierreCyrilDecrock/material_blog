{% extends 'BlogBundle::layout.html.twig' %}

{% block body %}
  {% for article in articles %}
    <a href="{{ path ('bundle_article', {'id': article.id}) }}">
      <h4>{{ loop.index }} - {{ article.title}}</h4>
      <p>{{ article.summary }}</p>
      <p>{{ article.content }}</p>
      <p>Auteur : {{ article.author.username }}</p>
      <p>Cat√©gorie : {{ article.category.name }}</p>
      {% for tag in article.tags %}
      <div class="chip">
          {{ tag.name }}
      </div>
      {% endfor %}


  {% endfor %}
{% endblock %}
