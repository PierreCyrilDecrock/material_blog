{% extends 'BlogBundle::layout.html.twig' %}

{% block body %}
    <h4>{{ article.title}}</h4>
    <p>{{ article.summary }}</p>
    <p>{{ article.content }}</p>
    <p>{{ article.author }}</p>
    <p>{{ article.category }}</p>
    <p>{{ article.tags }}</p>



      {% for comment in article.comments %}

          <p>{{ comment.author }}</p>
          <p>{{ comment.content }}</p>
          <p>{{ comment.publishedAt|date("m/d/Y")}}</p>

      {% endfor %}
{% endblock %}
